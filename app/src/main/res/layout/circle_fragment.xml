<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lichi.goodrongyi.ui.fragment.CreditCardsFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_circle_titile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        android:background="@color/tv_blue"
        app:tabIndicatorColor="#fff"
        app:tabSelectedTextColor="#ffff"
        app:tabTextColor="#fff" />
    <TextView
        android:id="@+id/tv_circle_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:drawableLeft="@mipmap/back"
        android:text="返回"
        android:textColor="@color/white"/>

</RelativeLayout>
    <!-- -->

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_circle_conext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

</LinearLayout>
