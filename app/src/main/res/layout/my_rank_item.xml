<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_rank_item_number"
            style="@style/my_item_common_text"
            android:layout_width="wrap_content"
            android:minWidth="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="4" />

        <ImageView
            android:id="@+id/my_rank_item_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/my_rank_item_number"
            android:src="@drawable/defaulthead" />

        <TextView
            android:id="@+id/my_rank_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_rank_item_pic"
            android:layout_weight="11"
            android:paddingLeft="10dp"
            android:text="司马"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

        <TextView
            android:id="@+id/my_rank_item_score"
            style="@style/my_item_common_text"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="2,51"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

    </LinearLayout>

</RelativeLayout>