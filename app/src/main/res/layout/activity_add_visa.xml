<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/tv_blue">

        <TextView
            android:id="@+id/tv_add_visa_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/white"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/back"
            android:layout_margin="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加信用卡"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:paddingLeft="10dp"
            android:text="信用卡卡号:"
            android:gravity="right"
            android:textSize="16sp"
            android:layout_gravity="center"/>

        <com.lichi.goodrongyi.view.ContentWithSpaceEditText
            android:id="@+id/et_add_visa_number"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="16sp"
            android:hint="请输入18位信用卡卡号"
            app:input_type="bank_card_no"/>

    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_add_visa_type"
        android:layout_width="match_parent"
        android:padding="3dp"

        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="银行："
            android:gravity="right"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_add_visa_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="根据卡号自动识别银行"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@mipmap/arrow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:padding="3dp"

        android:background="@color/white">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:paddingLeft="10dp"
            android:text="姓名:"
            android:gravity="right"
            android:textSize="16sp"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/et_add_visa_name"
            android:hint="请输入持卡人姓名"
            android:textSize="16sp"
            android:background="@null" />

    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_add_bill_date"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:padding="3dp"

        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:paddingLeft="32dp"
            android:text="账单日:"
            android:gravity="right"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_add_visa_bill_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="请选择账单日"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@mipmap/arrow"/>

    </LinearLayout>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_add_visa_refund_date"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:padding="3dp"

        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:paddingLeft="32dp"
            android:text="还款日:"
            android:gravity="right"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_add_visa_refund_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="请选择还款日"

            android:layout_margin="10dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@mipmap/arrow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:padding="3dp"

        android:background="@color/white">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="信用额度:"
            android:gravity="right"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_add_visa_limit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="请输入信用额度"
            android:inputType="numberSigned"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_add_visa_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"/>
    </LinearLayout>


</LinearLayout>
