<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical"
    tools:context="com.lichi.goodrongyi.ui.activity.my.RankActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/white">

        <com.lichi.goodrongyi.view.waveview.WaveView
            android:id="@+id/wave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/tv_blue" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/my_rank_title"
            style="@style/my_item_common_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="排行榜"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_rank_title"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_rank_no2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/defaulthead" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/linearLayout"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center|bottom"
                        android:src="@mipmap/rank_second" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_rank_no1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/defaulthead" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/linearLayout"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center|bottom"
                        android:src="@mipmap/rank_first" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_rank_no3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/defaulthead" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/linearLayout"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center|bottom"
                        android:src="@mipmap/rank_third" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_rank_no2_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="张学友"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:id="@+id/tv_rank_no2_points"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="336"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_small" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_rank_no1_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="郭富城"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_more" />

                        <TextView
                            android:id="@+id/tv_rank_no1_points"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="336"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_more" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_rank_no3_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="刘德华"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:id="@+id/tv_rank_no3_points"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="336"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_small" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_rank_show_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/blue_border_radius"
            android:drawableLeft="@mipmap/rank_check"
            android:drawablePadding="8dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="看我的排名"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:srlAccentColor="@android:color/white"
        app:srlEnableHeaderTranslationContent="true"
        app:srlEnableLoadmore="true"
        app:srlPrimaryColor="@color/colorPrimary">

        <com.scwang.smartrefresh.header.MaterialHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mhShowBezierWave="false" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_rank_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

        </android.support.v7.widget.RecyclerView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
