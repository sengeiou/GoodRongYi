<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/tv_blue"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="授权牌"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_more" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/authorize_brand_bg"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/icon_authorizebrand" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="1dp"
                android:text="兹授权白金用户张拥有重庆骊驰文化传播有限公司融开心APP代理权。"
                android:textColor="@color/app_title_brown"
                android:visibility="visible"
                android:layout_marginTop="25dp"
                android:textSize="@dimen/font_size_small" />

   <!--         <com.lichi.goodrongyi.view.SpacingTextView
                android:id="@+id/title"
                android:layout_width="190dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="5dp"
                android:text="兹授权白金用户张拥有重庆骊驰文化传播有限公司融开心APP代理权。"
                android:textColor="@color/app_title_brown"
                android:textSize="@dimen/font_size_small" />-->

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="备注:本授权证书不得影印、涂改、转让。"
                android:textColor="@color/text_title"
                android:textSize="@dimen/font_size_tiny"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
