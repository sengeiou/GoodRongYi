<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/tv_blue">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_more" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="手动输入"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_title" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:minWidth="110dp"
            android:text="银行卡后四位:"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

        <EditText
            android:id="@+id/et_visa_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:hint="请输入卡号"
            android:inputType="number"
            android:maxLength="4"
            android:paddingLeft="10dp"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_visa_type"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:minWidth="110dp"
            android:text="银行："
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

        <TextView
            android:id="@+id/tv_visa_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="请选择银行"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@mipmap/arrow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:minWidth="110dp"
            android:paddingLeft="10dp"
            android:text="姓名:"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

        <EditText
            android:id="@+id/et_owner_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="持卡人姓名"
            android:paddingLeft="10dp"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bill_date"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:minWidth="110dp"
            android:paddingLeft="32dp"
            android:text="账单日:"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

        <TextView
            android:id="@+id/tv_visa_bill_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="请选择账单日"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@mipmap/arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_visa_refund_date"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:clickable="true"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:minWidth="110dp"
            android:paddingLeft="32dp"
            android:text="还款日:"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

        <TextView
            android:id="@+id/tv_visa_refund_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="请选择还款日"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@mipmap/arrow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:minWidth="110dp"
            android:text="信用额度:"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

        <EditText
            android:id="@+id/et_visa_limit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="固定额度 + 临时额度"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:minWidth="110dp"
            android:text="账单金额:"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

        <EditText
            android:id="@+id/invoice_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="请输入账单金额"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_more" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_visa_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_solid"
            android:paddingLeft="80sp"
            android:paddingRight="80sp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>